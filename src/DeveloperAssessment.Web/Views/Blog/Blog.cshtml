@model DeveloperAssessment.Web.Models.Blog.BlogPostPageViewModel

@{
    ViewData["Title"] = "Blog";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Pages/Blog.css" asp-append-version="true" />
}

<!-- Blog post view - Exercise 1 -->
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="mt-4">@Model.Post.Title</h1>

            <hr />

            <p>Posted on @Model.Post.Date.ToString()</p>

            <hr />

            @if (!string.IsNullOrWhiteSpace(Model.Post.Image))
            {
                <img class="img-fluid rounded mx-auto d-block" src="@Model.Post.Image" alt="@Model.Post.Title" />
                <hr />
            }

            <div class="blog-content">
                @Html.Raw(Model.Post.HtmlContent)
            </div>

            <hr />

            <!-- Comment form - Exercise 3-->
            <div class="card my-4">
                <h5 class="card-header">Leave a Comment:</h5>
                <div class="card-body">

                    <form asp-action="Post" asp-route-id="@Model.Post.Id" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="NewComment.Name"></label>
                                <input asp-for="NewComment.Name" class="form-control" />
                                <span asp-validation-for="NewComment.Name" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="NewComment.EmailAddress">Email Address</label>
                                <input asp-for="NewComment.EmailAddress" class="form-control" />
                                <span asp-validation-for="NewComment.EmailAddress" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="NewComment.Message"></label>
                            <textarea asp-for="NewComment.Message" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="NewComment.Message" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>

                </div>
            </div>

            <!-- Comments - Exercise 2 & 4 -->
            @foreach (var c in Model.Post.Comments.OrderByDescending(x => x.Date))
            {
                <div class="media mb-4">
                    <img class="d-flex mr-3 rounded-circle user-avatar"
                         src="https://eu.ui-avatars.com/api/?name=@Uri.EscapeDataString(c.Name)"
                         alt="@c.Name" />

                    <div class="media-body">
                        <h5 class="mt-0">
                            @c.Name <small><em>(@c.Date.ToLocalTime())</em></small>
                        </h5>

                        <p>@c.Message</p>

                        @* Replies *@
                        @if (c.Replies?.Any() == true)
                        {
                            <div class="mt-3 pl-3 border-left">
                                @foreach (var r in c.Replies.OrderBy(x => x.Date))
                                {
                                    <div class="mb-2">
                                        <strong>@r.Name</strong>
                                        <small class="text-muted">
                                            (@r.Date.ToLocalTime())
                                        </small>
                                        <div>@r.Message</div>
                                    </div>
                                }
                            </div>
                        }

                        @* Reply form *@
                        <div class="mt-3">
                            <form asp-action="Reply" asp-route-id="@Model.Post.Id" asp-route-commentId="@c.Id" method="post" class="reply-form mt-2">
                                @Html.AntiForgeryToken()

                                <div class="row g-2 align-items-start">
                                    <div class="col-12 col-lg-6">
                                        <label asp-for="NewReply.Name"></label>
                                        <input asp-for="NewReply.Name" class="form-control form-control-sm" />
                                        <span asp-validation-for="NewReply.Name" class="text-danger"></span>
                                    </div>

                                    <div class="col-12 col-lg-6">
                                        <label asp-for="NewReply.EmailAddress">Email</label>
                                        <input asp-for="NewReply.EmailAddress" class="form-control form-control-sm" />
                                        <span asp-validation-for="NewReply.EmailAddress" class="text-danger"></span>
                                    </div>

                                    <div class="col-12 col-lg-12">
                                        <label asp-for="NewReply.Message"></label>
                                        <input asp-for="NewReply.Message" class="form-control form-control-sm" />
                                        <span asp-validation-for="NewReply.Message" class="text-danger"></span>
                                    </div>

                                    <div class="col-12 col-lg-2 d-grid">
                                        <button class="btn btn-outline-primary btn-sm" type="submit">Reply</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
